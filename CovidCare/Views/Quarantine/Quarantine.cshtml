@model CovidCare.Models.Quarantine
<hr/><hr/><hr/>
@{
    ViewData["Title"] = "Quarantine";
}

<h1>Quarantine Centre Booking</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Quarantine">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input type="radio" name="Gender" value="Male" />Male
                <input type="radio" name="Gender" value="Female" />Female
                <input type="radio" name="Gender" value="Others" />Others
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <select asp-for="City">
                    <option selected disabled>..Select The City..</option>
                    <option>Delhi</option>
                    <option>Mumbai</option>
                    <option>Jaipur</option>
                    <option>Kolkata</option>
                    <option>Chennai</option>
                </select>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Centres" class="control-label"></label>
                <select asp-for="Centres">
                    <option selected disabled>.Choose Quarantine Centre.</option>
                    <option>Centre A</option>
                    <option>Centre B</option>
                    <option>Centre C</option>
                    <option>Centre D</option>
                    <option>Centre E</option>
                </select>
                <span asp-validation-for="Centres" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Beds" class="control-label"></label>

                <input type="number" step="1" value="0" />
                <span asp-validation-for="Beds" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Aadhar" class="control-label"></label>
                <input asp-for="Aadhar" class="form-control" />
                <span asp-validation-for="Aadhar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mobile" class="control-label"></label>
                <input asp-for="Mobile" class="form-control" />
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit Request" class="btn btn-primary button-style" />
            </div>
            <b>@ViewBag.message</b>
        </form>
    </div>
</div>

<div>
    <a asp-action="Quarantine">New Request</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
